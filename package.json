{
  "name": "gala-zeitgeist",
  "description": "Record your application usage in Zeitgeist.",
  "license": "GPL-3.0",
  "author": "Payson Wallach <payson@paysonwallach.com>",
  "homepage": "https://github.com/paysonwallach/gala-zeitgeist#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paysonwallach/gala-zeitgeist.git"
  },
  "bugs": {
    "url": "https://github.com/paysonwallach/gala-zeitgeist/issues"
  },
  "version": "0.1.0",
  "scripts": {
    "format": "run-p format:*",
    "format:js": "prettier --write .",
    "format:package.json": "prettier-package-json --write",
    "format:vala": "find . -name '*.vala' -exec uncrustify -c uncrustify.cfg --replace {} \\;",
    "prerelease": "scrivano",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-package-json": "^2.1.3",
    "scrivano": "^0.1.0",
    "standard-version": "^9.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "meta": {
    "name": "Gala Zeitgeist",
    "owner": "paysonwallach",
    "license": {
      "name": "GNU General Public License v3.0",
      "url": "https://github.com/paysonwallach/gala-zeitgeist/blob/master/LICENSE"
    },
    "media": {
      "url": "https://github.com/paysonwallach/gala-zeitgeist/blob/master/media"
    },
    "todo": {
      "url": "https://github.com/paysonwallach/gala-zeitgeist/blob/master/TODO.md"
    },
    "releases": {
      "url": "https://github.com/paysonwallach/gala-zeitgeist/releases"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run prerelease"
    }
  }
}
